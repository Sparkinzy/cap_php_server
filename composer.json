{
    "name": "sparkinzy/cap_php_server",
    "description": "A PHP implementation of Cap - a lightweight, modern open-source CAPTCHA alternative using SHA-256 proof-of-work",
    "keywords": ["captcha", "proof-of-work", "security", "authentication", "spam-protection"],
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "sparkinzy",
            "email": "sparkinzy@163.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "ext-redis": "*"
    },
    "suggest": {
        "ext-redis": "Required for Redis storage support"
    },
    "autoload": {
        "psr-4": {
            "Sparkinzy\\CapPhpServer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sparkinzy\\CapPhpServer\\Tests\\": "tests/"
        }
    },
    "extra": {
        "thanks": {
            "go-package": "https://github.com/samwafgo/cap_go_server"
        }
    },
    "scripts": {
        "test": "phpunit tests/"
    },
    "config": {
        "sort-packages": true
    }
}